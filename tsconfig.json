{
    "compilerOptions": {
      "outDir": "./build",
      "rootDir": "./src",
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "removeComments": false,

      "baseUrl": ".",
      "allowJs": true,
      "allowUmdGlobalAccess": true,
    },
    "include": ["src/**/*"]
}